@model ShoppingCart.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm())
{ 
    <table border="1">
        <tr>
            <td> 
              Username:
            </td>
            <td>
                @Html.TextBoxFor(m => m.username, new { autocomplete = "off" })
            </td>
        </tr>
        <tr>
            <td>
                Password:
            </td>
            <td>
                @Html.PasswordFor(m => m.password, new { autocomplete = "off" })
            </td>
        </tr>
    </table>
    <input id="btnLogin" type="submit" value="Login" />
}

